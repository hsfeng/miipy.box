{
    "name": "miipy.box",
    "description": "A Chrome packaged app for demonstration using dropbox api. This is for demonstration purposes only",
    "version": "1",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "https://*.dropbox.com/1/*",
        "identity",
        "storage",
        "system.storage",
        "unlimitedStorage",
        {
            "fileSystem": [
                "write",
                "retainEntries",
                "directory"
            ]
        }
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "js/background.js",
                "js/chromereload.js"
            ]
        }
    }
}